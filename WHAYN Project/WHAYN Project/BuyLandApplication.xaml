<Window
    x:Class="WHAYN_Project.BuyLandApplication"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WHAYN_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BuyLandApplication"
    Width="350"
    Height="500"
    Icon="/Image/Logo.png"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.7*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border
                            Width="75"
                            Height="75"
                            Margin="0,20"
                            HorizontalAlignment="RIGHT">
                            <Border.Background>
                                <ImageBrush ImageSource="/Image/Logo.png" />
                            </Border.Background>
                        </Border>

                        <TextBlock
                            Grid.Column="1"
                            Margin="5"
                            VerticalAlignment="Center"
                            FontFamily="Felix Titling"
                            FontSize="30"
                            FontWeight="Bold"
                            Text="W/HAYN" />
                    </Grid>
                    <Separator Grid.Row="1" Margin="10,0" />

                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,20"
                        HorizontalAlignment="Center"
                        FontFamily="cAMBRIA"
                        FontSize="18"
                        Text="Purchase Application" />
                    <TextBlock x:Name="TrackNum" FontSize="20" />
                    <TextBlock
                        x:Name="charchar"
                        Grid.Row="0"
                        Margin="0,20"
                        HorizontalAlignment="Center"
                        FontFamily="cAMBRIA"
                        FontSize="18" />

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border
                            Height="30"
                            Margin="10,0"
                            Background="#FF8CA88E">
                            <TextBlock
                                Margin="10,0"
                                VerticalAlignment="Center"
                                FontFamily="cAMBRIA"
                                Foreground="White"
                                Text="PERSONAL INFORMATION" />
                        </Border>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="20,10"
                                FontFamily="Cambria"
                                Text="Full Name" />
                            <TextBox
                                x:Name="FullName"
                                Grid.Row="1"
                                Height="25"
                                Margin="20,0"
                                VerticalContentAlignment="Center" />
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="20,10"
                                FontFamily="Cambria"
                                Text="Birth Date (DD/MM/YYY)" />

                            <DatePicker
                                x:Name="BirthDate"
                                Grid.Row="1"
                                Height="25"
                                Margin="20,0" />
                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Margin="20,10"
                                    FontFamily="Cambria"
                                    Text="Sex" />

                                <ComboBox
                                    x:Name="SexCmb"
                                    Grid.Row="1"
                                    Width="120"
                                    Margin="20,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center" />

                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,10"
                                    FontFamily="Cambria"
                                    Text="Nationality" />

                                <TextBox
                                    x:Name="Nationality"
                                    Grid.Row="1"
                                    Height="25"
                                    Margin="0,0,20,0"
                                    VerticalContentAlignment="Center" />
                            </Grid>



                        </Grid>
                    </Grid>
                    <!--  Personal Information  -->
                    <Separator Grid.Row="2" Margin="10,10" />
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border
                            Height="30"
                            Margin="10,0"
                            Background="#FF8CA88E">
                            <TextBlock
                                Margin="10,0"
                                VerticalAlignment="Center"
                                FontFamily="cAMBRIA"
                                Foreground="White"
                                Text="CONTACT DETAILS" />
                        </Border>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="20,10"
                                FontFamily="Cambria"
                                Text="Address" />
                            <TextBox
                                x:Name="AddressTxt"
                                Grid.Row="1"
                                Height="25"
                                Margin="20,0"
                                VerticalContentAlignment="Center" />
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Margin="20,10"
                                    FontFamily="Cambria"
                                    Text="Email" />

                                <TextBox
                                    x:Name="EmailTxt"
                                    Grid.Row="1"
                                    Height="25"
                                    Margin="20,0"
                                    VerticalContentAlignment="Center" />

                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,10"
                                    FontFamily="Cambria"
                                    Text="Mobile Number" />

                                <TextBox
                                    x:Name="NumTxt"
                                    Grid.Row="1"
                                    Height="25"
                                    Margin="0,0,20,0"
                                    VerticalContentAlignment="Center" />
                            </Grid>


                        </Grid>

                    </Grid>
                    <!--  Contact Information  -->
                    <Separator Grid.Row="4" Margin="10,10" />
                    <Grid Grid.Row="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border
                            Height="30"
                            Margin="10,0"
                            Background="#FF8CA88E">
                            <TextBlock
                                Margin="10,0"
                                VerticalAlignment="Center"
                                FontFamily="cAMBRIA"
                                Foreground="White"
                                Text="NOTES / CONCERN" />
                        </Border>

                        <TextBox
                            x:Name="NoteTxt"
                            Grid.Row="1"
                            Height="100"
                            Margin="20,10" />
                    </Grid>
                    <Separator Grid.Row="6" Margin="10,10" />

                    <StackPanel Grid.Row="7" Margin="0,5,10,20">
                        <Button
                            Padding="35,8"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="#FF8CA88E"
                            Click="SubmitButton_Click"
                            Content="Submit"
                            FontFamily="Cambria"
                            Foreground="White" />
                    </StackPanel>



                </Grid>



            </Grid>

        </ScrollViewer>

    </Grid>
</Window>
