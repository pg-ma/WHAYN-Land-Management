<UserControl
    x:Class="WHAYN_Project.LstEngr"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WHAYN_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="434.04"
    d:DesignWidth="615.384615384615"
    Background="White"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.13*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Background="#FF8CA88E">
            <TextBlock
                Margin="20,10"
                FontFamily="Cambria"
                FontSize="20"
                Foreground="WhiteSmoke"
                Text="W/HAYN | List of Engineers" />
        </Grid>

        <Grid Grid.Row="1">
            <!--  Background="#FF839E85"  -->
            <!--<Border Margin="50,12">
                <Border.Background>
                    <SolidColorBrush Color="#FFCBD2C6" Opacity="0.5"/>
                </Border.Background>
            </Border>-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Background="#FFCBD2C6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    Padding="20,10"
                    HorizontalContentAlignment="Left"
                    Background="#FFCBD2C6"
                    BorderThickness="0.5"
                    Click="AllList_Click"
                    Content="Engineers (All)"
                    FontFamily="Cambria"
                    FontSize="12"
                    Foreground="White" />
                <Button
                    Grid.Row="1"
                    Padding="20,10"
                    HorizontalContentAlignment="Right"
                    Background="#FFCBD2C6"
                    BorderThickness="0.5"
                    Click="GE_Click"
                    Content="Geodetic Engineers"
                    FontFamily="Cambria"
                    FontSize="11"
                    Foreground="White" />
                <Button
                    Grid.Row="2"
                    Padding="20,10"
                    HorizontalContentAlignment="Right"
                    Background="#FFCBD2C6"
                    BorderThickness="0.5"
                    Click="SE_Click"
                    Content="Structural Engineers"
                    FontFamily="Cambria"
                    FontSize="11"
                    Foreground="White" />
                <Button
                    Grid.Row="3"
                    Padding="20,10"
                    HorizontalContentAlignment="Right"
                    Background="#FFCBD2C6"
                    BorderThickness="0.5"
                    Click="CE_Click"
                    Content=" Civil Engineers"
                    FontFamily="Cambria"
                    FontSize="11"
                    Foreground="White" />
                <Button
                    Grid.Row="4"
                    Padding="20,10"
                    HorizontalContentAlignment="Right"
                    Background="#FFCBD2C6"
                    BorderThickness="0.5"
                    Click="EE_Click"
                    Content="Electrical Engineers"
                    FontFamily="Cambria"
                    FontSize="11"
                    Foreground="White" />
            </Grid>

            <ListBox
                x:Name="LstEngrs"
                Grid.Column="2"
                Margin="10"
                Padding="5,3"
                HorizontalContentAlignment="Stretch"
                BorderBrush="DarkOliveGreen"
                SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,5"
                            Padding="8"
                            BorderBrush="ForestGreen"
                            BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    FontFamily="Cambria"
                                    FontSize="10"
                                    FontWeight="Bold"
                                    Text="{Binding Path=FullName}" />
                                <TextBlock
                                    Grid.Row="1"
                                    FontFamily="Cambria"
                                    FontSize="7"
                                    FontStyle="Italic"
                                    Text="{Binding Path=Engr}" />
                                <TextBlock
                                    Grid.Row="2"
                                    FontFamily="Cambria"
                                    FontSize="7"
                                    Text="{Binding Path=Address}" />
                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Right"
                                    FontFamily="Cambria"
                                    FontSize="7"
                                    Text="{Binding Path=PhoneNumber}" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    FontFamily="Cambria"
                                    FontSize="7"
                                    Text="(09)" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </Grid>

    </Grid>
</UserControl>
