<UserControl
    x:Class="WHAYN_Project.Browse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:WHAYN_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="434.04"
    d:DesignWidth="615.384615384615"
    Background="White"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Background="#FF8CA88E">
            <TextBlock
                Margin="20,10"
                FontFamily="Cambria"
                FontSize="20"
                Foreground="WhiteSmoke"
                Text="W/HAYN | Browse" />
        </Grid>
        <Grid Grid.Row="1" Background="#FF839E85">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Border Margin="50,15,10,15" CornerRadius="10">
                    <Border.Background>
                        <SolidColorBrush Opacity="0.5" Color="#FFCBD2C6" />
                    </Border.Background>
                </Border>
                <TextBlock
                    x:Name="TblSearch"
                    Margin="55,10,10,10"
                    Padding="8,3"
                    VerticalAlignment="Center"
                    Foreground="LightSlateGray"
                    Text="Search" />
                <TextBox
                    x:Name="TxtSearch"
                    Margin="60,10,10,10"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    TextChanged="TxtSearch_OnTextChanged" />
                <fa:FontAwesome
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Icon="Search" />
                <Image
                    Width="100"
                    Height="80"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Source="/Image/cutie panda.png" />
            </Grid>
            <Grid Grid.Column="1">


                <Button
                    Width="40"
                    Height="45"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="SellLot_Click"
                    FontFamily="Cambria">
                    <fa:FontAwesome
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="40"
                        Foreground="White"
                        Icon="PlusCircle" />
                </Button>
            </Grid>

        </Grid>
        <ListBox
            x:Name="ListViewProducts"
            Grid.Row="2"
            Padding="5,3"
            Background="#FFEDF5EC"
            ItemsSource="{Binding Path=Lot, UpdateSourceTrigger=PropertyChanged}"
            MouseDoubleClick="ListViewProducts_MouseDoubleClick"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding Path=SelectedLot}"
            SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="110"
                        Height="170"
                        Margin="10">
                        <StackPanel MaxWidth="110" Orientation="Vertical">
                            <Border
                                Width="100"
                                Height="100"
                                Margin="5"
                                CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" />
                                </Border.Effect>
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding Image}" />
                                </Border.Background>
                            </Border>
                            <TextBlock
                                Margin="5,2"
                                FontSize="10"
                                Text="{Binding Name}"
                                TextWrapping="Wrap" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0"
                                    FontFamily="Cambria"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Text="PHP" />
                                <TextBlock
                                    Margin="0"
                                    FontFamily="Cambria"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Text="{Binding Price, StringFormat={}{0:N2}}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                            <TextBlock
                                Margin="5"
                                FontFamily="Cambria"
                                FontSize="10"
                                FontStyle="Italic"
                                Text="{Binding SpaceType}"
                                TextWrapping="Wrap" />

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ListBox>


