<Window
    x:Class="WHAYN_Project.AreaDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WHAYN_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AreaDetails"
    Width="600"
    Height="425"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d"
    Icon="/Image/Logo.png">

    <Grid DataContext="{Binding Path=SelectedLot}" ShowGridLines="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="1*" />

        </Grid.RowDefinitions>

        <Grid Background="#FF839E85" />
        <ScrollViewer Grid.Row="1">
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--<StackPanel Grid.Column="0">
                <Border
                    Width="100"
                    Height="100"
                    Margin="5"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" />
                    </Border.Effect>
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding Image}" />
                    </Border.Background>
                </Border>
            </StackPanel>-->

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Border
                            x:Name="Image"
                            Width="225"
                            Height="225"
                            Margin="0,20,0,20"
                            VerticalAlignment="Top"
                            BorderBrush="ForestGreen"
                            CornerRadius="10">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding Image}" />
                            </Border.Background>
                        </Border>
                    </Grid>
                    <Button
                        x:Name="ApplyBtn"
                        Grid.Row="4"
                        Width="200"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="#FF839E85"
                        BorderThickness="0"
                        Click="ApplyBtn_Click"
                        Content="Apply"
                        FontFamily="Cambria"
                        FontSize="15"
                        Foreground="White" />

                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Name="LotTitle"
                        Grid.Row="0"
                        Margin="10,20,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Felix Titling"
                        FontSize="26"
                        FontWeight="Bold"
                        Text="{Binding Name}"
                        TextWrapping="Wrap" />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="10"
                            VerticalAlignment="Center"
                            FontFamily="Cambria"
                            FontSize="25"
                            FontWeight="DemiBold"
                            Foreground="DarkSeaGreen"
                            Text="PHP" />

                        <TextBlock
                            Grid.Column="1"
                            Margin="0,10,10,10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Cambria"
                            FontSize="25"
                            FontWeight="DemiBold"
                            Foreground="DarkSeaGreen"
                            Text="{Binding Price, StringFormat={}{0:N2}}" />

                        <Separator
                            Grid.ColumnSpan="2"
                            Margin="0,0,20,0"
                            VerticalAlignment="Bottom" />
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="10,0,10,5"
                            FontFamily="Cambria"
                            FontSize="13"
                            Text="Contact Information" />

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*" />
                                <ColumnDefinition Width="0.05*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Margin="30,0"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="Owner" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="12"
                                Text=":" />
                            <TextBlock
                                Grid.Column="2"
                                Margin="10,0"
                                HorizontalAlignment="Left"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="{Binding OwnerFullName}" />
                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*" />
                                <ColumnDefinition Width="0.05*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Margin="30,0"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="E-mail" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="12"
                                Text=":" />
                            <TextBlock
                                Grid.Column="2"
                                Margin="10,0"
                                HorizontalAlignment="Left"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="{Binding OwnerEmail}"
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*" />
                                <ColumnDefinition Width="0.05*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Margin="30,0,20,0"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="Phone Number" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="12"
                                Text=":" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock
                                    Margin="10,0,0,0"
                                    FontFamily="Cambria"
                                    FontSize="12"
                                    Text="(09) " />
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="0,0"
                                    HorizontalAlignment="Left"
                                    FontFamily="Cambria"
                                    FontSize="12"
                                    Text="{Binding OwnerContactNum}" />
                            </StackPanel>

                        </Grid>

                        <TextBlock Grid.Row="4" />

                        <TextBlock
                            Grid.Row="5"
                            Margin="10,0,10,5"
                            FontFamily="Cambria"
                            FontSize="13"
                            Text="Lot Details" />

                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*" />
                                <ColumnDefinition Width="0.05*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Margin="30,0"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="Location" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="12"
                                Text=":" />
                            <TextBlock
                                Grid.Column="2"
                                Margin="10,0"
                                HorizontalAlignment="Left"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="{Binding LotLocation}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                        </Grid>
                        <Grid Grid.Row="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*" />
                                <ColumnDefinition Width="0.05*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Margin="30,0"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="Lot Type" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="12"
                                Text=":" />
                            <TextBlock
                                Grid.Column="2"
                                Margin="10,0"
                                HorizontalAlignment="Left"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="{Binding SpaceType}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid Grid.Row="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*" />
                                <ColumnDefinition Width="0.05*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Margin="30,0"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="Area" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="12"
                                Text=":" />
                            <TextBlock
                                x:Name="AreaSize"
                                Grid.Column="2"
                                Margin="10,0"
                                HorizontalAlignment="Left"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="{Binding LandSize}" />
                        </Grid>


                    </Grid>

                    <!--<Grid Grid.Row="2" Margin="0,10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.75*" />
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Margin="10,0"
                            FontFamily="Cambria"
                            FontSize="13"
                            Text="Contact Information" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="30,0"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="Owner" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="30,0"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="E-mail" />
                        <TextBlock
                            Grid.Row="3"
                            Margin="30,0"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="Phone Number" />
                        <TextBlock Grid.Row="4" />
                        <TextBlock
                            Grid.Row="5"
                            Margin="10,0"
                            FontFamily="Cambria"
                            FontSize="13"
                            Text="Lot Details" />
                        <TextBlock
                            Grid.Row="6"
                            Margin="30,0"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="Location" />
                        <TextBlock
                            Grid.Row="7"
                            Margin="30,0"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="Area" />

                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="1" Text=":" FontSize="12"/>
                        <TextBlock Grid.Row="2" Text=":" FontSize="12"/>
                        <TextBlock Grid.Row="3" Text=":" FontSize="12"/>
                        <TextBlock Grid.Row="6" Text=":" FontSize="12"/>
                        <TextBlock Grid.Row="7" Text=":" FontSize="12"/>
                    </Grid>

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="1"
                            Margin="10,0"
                            HorizontalAlignment="Left"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="{Binding OwnerFullName}" />
                        <TextBlock Grid.Row="0" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="10,0"
                            HorizontalAlignment="Left"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="{Binding OwnerEmail}" />
                        <TextBlock
                            Grid.Row="3"
                            Margin="10,0"
                            HorizontalAlignment="Left"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="{Binding OwnerContactNum}" />
                        <TextBlock Grid.Row="4" />
                        <TextBlock Grid.Row="5" />
                        <TextBlock
                            Grid.Row="6"
                            Margin="10,0"
                            HorizontalAlignment="Left"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="{Binding LotLocation}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            x:Name="AreaSize"
                            Grid.Row="7"
                            Margin="10,0"
                            HorizontalAlignment="Left"
                            FontFamily="Cambria"
                            FontSize="12"
                            Text="{Binding LandSize}" />


                    </Grid>
                </Grid>-->

                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <Separator Margin="0,0,20,0" VerticalAlignment="Top" />
                            <TextBlock
                                Margin="10,10,0,0"
                                FontFamily="Cambria"
                                FontSize="13"
                                Text="Available Documents:" />
                        </Grid>
                        <Grid Grid.Row="1" Margin="20,0,20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                x:Name="LotDocuments"
                                Grid.Column="0"
                                Margin="10"
                                Padding="5,3"
                                Background="#FF839E85"
                                BorderThickness="0"
                                Click="LotDocuments_Click"
                                Content="Technical"
                                FontFamily="Cambria"
                                FontSize="13"
                                Foreground="White" />
                            <Button
                                x:Name="Survey"
                                Grid.Column="1"
                                Margin="10"
                                Padding="5,3"
                                Background="#FF839E85"
                                BorderThickness="0"
                                Content="Survey"
                                FontFamily="Cambria"
                                FontSize="13"
                                Click="Survey_Click"
                                Foreground="White" />
                        </Grid>

                    </Grid>
                </Grid>

            </Grid>
        </ScrollViewer>

        <!--<ContentControl x:Name="CC" Content="" />-->
    </Grid>
</Window>
