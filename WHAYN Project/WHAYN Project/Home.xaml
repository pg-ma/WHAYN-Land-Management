<UserControl
    x:Class="WHAYN_Project.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:WHAYN_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="434.04"
    d:DesignWidth="615.384615384615"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFA7B8A5" />
                <GradientStop Offset="1" Color="#FF839E85" />
            </RadialGradientBrush>
        </Grid.Background>
        <!--<Grid.Background>
            <ImageBrush ImageSource="/Image/Bg.jpg" />
        </Grid.Background>-->
        <Grid Grid.Column="2">


            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="0.7*" />

            </Grid.RowDefinitions>

            <!--<Grid Grid.Row="0" Background="#FF839E85" />-->

            <Grid Grid.Row="1" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    Width="90"
                    Height="90"
                    Margin="0,10"
                    HorizontalAlignment="RIGHT">
                    <Border.Background>
                        <ImageBrush ImageSource="/Image/Logo.png" />
                    </Border.Background>
                </Border>
                <TextBlock
                    Grid.Column="1"
                    Margin="10,20,20,20"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontFamily="Felix Titling"
                    FontSize="50"
                    FontWeight="ExtraBold"
                    Foreground="Black"
                    Text="W/HAYN..." />

            </Grid>

            <Separator
                Grid.Row="1"
                Margin="50,0"
                VerticalAlignment="Bottom" />

            <Grid Grid.Row="2" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Margin="0,15">
                        <StackPanel>
                            <fa:FontAwesome
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="30"
                                Foreground="#FF839E85"
                                Icon="Safari" />

                            <TextBlock
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Cambria"
                                FontSize="13"
                                Text="Browse" />
                            <TextBlock
                                Width="150"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="Look up for available lots/property or sell a land with just a click!"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Margin="0,15">
                        <StackPanel>
                            <fa:FontAwesome
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="30"
                                Foreground="#FFCBD2C6"
                                Icon="User" />
                            <TextBlock
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Cambria"
                                FontSize="13"
                                Text="Tracker" />
                            <TextBlock
                                Width="150"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="Search up TN (tracker number) and not miss a chance to monitor your progress"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />

                        </StackPanel>

                    </Grid>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Margin="0,15">
                        <StackPanel>
                            <fa:FontAwesome
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="30"
                                Foreground="#FF839E85"
                                Icon="Empire" />
                            <TextBlock
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Cambria"
                                FontSize="13"
                                Text="Engineers" />
                            <TextBlock
                                Width="150"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                FontFamily="Cambria"
                                FontSize="12"
                                Text="Find engineers of your choice, always ready for your service. Any moment, anytime."
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </StackPanel>

                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
