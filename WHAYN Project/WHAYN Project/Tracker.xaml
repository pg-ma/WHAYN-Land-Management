<UserControl
    x:Class="WHAYN_Project.Tracker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:WHAYN_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="434.04"
    d:DesignWidth="615.384615384615"
    Background="White"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Background="#FF8CA88E">
            <TextBlock
                Margin="20,10"
                FontFamily="Cambria"
                FontSize="20"
                Foreground="WhiteSmoke"
                Text="W/HAYN | Tracker" />
        </Grid>
        <Grid Grid.Row="1" Background="#FF839E85">
            <Border Margin="50,15,50,15" CornerRadius="10">
                <Border.Background>
                    <SolidColorBrush Opacity="0.5" Color="#FFCBD2C6" />
                </Border.Background>
            </Border>
            <TextBlock
                x:Name="TblSearch"
                Margin="55,10,130,10"
                Padding="8,3"
                VerticalAlignment="Center"
                Foreground="LightSlateGray"
                Text="Tracker Number" />
            <TextBox
                x:Name="TxtSearch"
                Margin="60,10,130,10"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                TextChanged="TxtSearch_OnTextChanged" />
            <fa:FontAwesome
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="White"
                Icon="Search" />
            <Image
                Width="100"
                Height="80"
                Margin="0,0,40,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Source="/Image/cutie panda.png" />
        </Grid>

        <Grid Grid.Row="2" Background="#FFEDF5EC">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ListBox
                x:Name="LstApplicants"
                Grid.Row="1"
                Grid.Column="2"
                Margin="10"
                Padding="5,3"
                HorizontalContentAlignment="Stretch"
                Background="#FFCBD2C6"
                SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,5"
                            Padding="8"
                            BorderBrush="ForestGreen"
                            BorderThickness="1">
                            <Grid>
                                <!--<Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />

                                </Grid.RowDefinitions>-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Margin="10,0"
                                    HorizontalAlignment="Left"
                                    FontFamily="Cambria"
                                    FontSize="10"
                                    FontWeight="Bold"
                                    Text="{Binding ApplicantTrackerNum}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="100,0"
                                    HorizontalAlignment="Left"
                                    FontFamily="Cambria"
                                    FontSize="10"
                                    FontStyle="Italic"
                                    Text="{Binding ApplicantFullName}" />
                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Left"
                                    FontFamily="Cambria"
                                    FontSize="10"
                                    Text="Application Sent" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>

        </Grid>
    </Grid>
</UserControl>
