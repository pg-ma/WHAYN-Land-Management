<Window
    x:Class="WHAYN_Project.ConfirmationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WHAYN_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ConfirmationPage"
    Width="350"
    Height="500"
    Icon="/Image/Logo.png"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>

            <Grid>
                <TextBlock
                    Margin="10,20,0,10"
                    FontFamily="cAMBRIA"
                    FontSize="18"
                    FontWeight="ExtraBold"
                    Text="Buyer's Application Summary" />
                <TextBlock x:Name="TN" FontSize="20" />
            </Grid>
            <Separator Grid.Row="1" Margin="10,10" />
            <Grid Grid.Row="2">
                <Border
                    Height="30"
                    Margin="10,0"
                    Background="#FF8CA88E">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontFamily="cAMBRIA"
                        Foreground="White"
                        Text="PERSONAL INFORMATION" />
                </Border>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="20,10"
                        FontFamily="Cambria"
                        Text="Full Name" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="20,10"
                        FontFamily="Cambria"
                        Text="BirthDate" />
                    <TextBlock
                        Grid.Row="2"
                        Margin="20,10"
                        FontFamily="Cambria"
                        Text="Nationality" />
                    <TextBlock
                        Grid.Row="3"
                        Margin="20,10"
                        FontFamily="Cambria"
                        Text="Sex" />
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Name="PI1"
                        Margin="20,10"
                        FontFamily="Cambria" />
                    <TextBlock
                        x:Name="PI2"
                        Grid.Row="1"
                        Margin="20,10"
                        FontFamily="Cambria" />
                    <TextBlock
                        x:Name="PI3"
                        Grid.Row="2"
                        Margin="20,10"
                        FontFamily="Cambria" />
                    <TextBlock
                        x:Name="PI4"
                        Grid.Row="3"
                        Margin="20,10"
                        FontFamily="Cambria" />
                </Grid>
            </Grid>
            <Grid Grid.Row="4">
                <Border
                    Height="30"
                    Margin="10,0"
                    Background="#FF8CA88E">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontFamily="cAMBRIA"
                        Foreground="White"
                        Text="CONTACT DETAILS" />
                </Border>
            </Grid>
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="20,10"
                        FontFamily="Cambria"
                        Text="Address" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="20,10"
                        FontFamily="Cambria"
                        Text="E-mail" />
                    <TextBlock
                        Grid.Row="2"
                        Margin="20,10"
                        FontFamily="Cambria"
                        Text="Contact Number" />

                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Name="CD1"
                        Margin="20,10"
                        FontFamily="Cambria" />
                    <TextBlock
                        x:Name="CD2"
                        Grid.Row="1"
                        Margin="20,10"
                        FontFamily="Cambria" />
                    <TextBlock
                        x:Name="CD3"
                        Grid.Row="2"
                        Margin="20,10"
                        FontFamily="Cambria" />

                </Grid>
            </Grid>
            <Grid Grid.Row="6">
                <Border
                    Height="30"
                    Margin="10,0"
                    Background="#FF8CA88E">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontFamily="cAMBRIA"
                        Foreground="White"
                        Text="NOTE / CONCERN" />
                </Border>
            </Grid>
            <TextBlock
                x:Name="NTC"
                Grid.Row="7"
                Margin="20,10"
                VerticalAlignment="Center"
                FontFamily="cAMBRIA" />
            <StackPanel Grid.Row="8" Margin="0,15,10,20">
                <Button
                    Padding="35,8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="#FF8CA88E"
                    Click="ConfirmButton_Click"
                    Content="Confirm"
                    FontFamily="Cambria"
                    Foreground="White" />
            </StackPanel>
        </Grid>
    </ScrollViewer>

</Window>
